<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#2EFFE6"
    tools:context=".SignUp">


    <ImageView
        android:id="@+id/SignUp_Page_logo"
        android:layout_width="373dp"
        android:layout_height="194dp"
        android:layout_marginTop="16dp"
        android:src="@drawable/vm21"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/SignUp_Page_name_layout"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="322dp"
        android:layout_height="74dp"

        android:layout_marginBottom="436dp"
        android:hint="Name"
        android:textColor="@color/purple_700"
        android:textColorHint="#0080B3"


        app:endIconMode="clear_text"



        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.494"
        app:layout_constraintStart_toStartOf="parent">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/SignUp_Page_name"
            android:layout_width="322dp"
            android:layout_height="63dp"
            android:layout_marginBottom="312dp"
            android:padding="20dp"

            />

    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/SignUp_Page_email_layout"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="322dp"
        android:layout_height="74dp"

        android:layout_marginBottom="356dp"
        android:hint="Email"
        android:textColor="@color/purple_700"
        android:textColorHint="#0080B3"

        app:endIconMode="clear_text"
        app:startIconDrawable="@drawable/email"


        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.494"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/SignUp_Page_name_layout"
        app:layout_constraintVertical_bias="0.823">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/SignUp_Page_email"
            android:layout_width="322dp"
            android:layout_height="63dp"
            android:layout_marginBottom="312dp"
            android:padding="20dp"
            />

    </com.google.android.material.textfield.TextInputLayout>



    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/SignUp_Page_password_layout"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="322dp"
        android:layout_height="74dp"
        android:layout_marginBottom="268dp"
        android:hint="Password"
        android:textColor="@color/purple_700"
        android:textColorHint="#0080B3"


        app:endIconMode="password_toggle"
        app:startIconDrawable="@drawable/lock"


        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.494"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/SignUp_Page_name_layout"
        app:layout_constraintVertical_bias="0.9">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/SignUp_Page_password"
            android:layout_width="322dp"
            android:layout_height="63dp"
            android:layout_marginBottom="312dp"
            android:inputType="textPassword"
            android:padding="20dp"
            />

    </com.google.android.material.textfield.TextInputLayout>





    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/SignUp_Page_confirm_password_layout"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="322dp"
        android:layout_height="74dp"
        android:layout_marginBottom="200dp"
        android:hint="Confirm Password"
        android:textColor="@color/purple_700"
        android:textColorHint="#0080B3"


        app:startIconDrawable="@drawable/lock"


        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.494"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/SignUp_Page_name_layout"
        app:layout_constraintVertical_bias="1.0">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/SignUp_Page_Confirm_password"
            android:layout_width="322dp"
            android:layout_height="63dp"
            android:layout_marginBottom="312dp"
            android:inputType="textPassword"
            android:padding="20dp"
            />

    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/Signup_Page_CreateAccount"
        android:layout_width="187dp"
        android:layout_height="71dp"
        android:layout_marginTop="40dp"
        android:backgroundTint="#86000000"
        android:text="Create Account"
        android:textColor="@color/white"


        app:cornerRadius="24dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/SignUp_Page_confirm_password_layout" />

</androidx.constraintlayout.widget.ConstraintLayout>